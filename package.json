{
  "name": "yoyopod-dashboard",
  "version": "1.0.0",
  "description": "YoyoPod Parent Management Dashboard",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "remix build",
    "dev": "remix vite:dev",
    "start": "remix-serve ./build/index.js",
    "typecheck": "tsc",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "test": "vitest",
    "test:e2e": "playwright test",
    "i18n:validate": "tsx scripts/validate-translations.ts",
    "i18n:split": "tsx scripts/split-namespaces.ts",
    "i18n:merge": "tsx scripts/merge-namespaces.ts",
    "i18n:coverage": "tsx scripts/translation-coverage.ts",
    "battery:mock": "tsx services/mock-battery-service.ts",
    "battery:status": "cat /run/yoyo/battery.json",
    "gps:mock": "tsx services/mock-gps-service.ts",
    "gps:status": "cat /tmp/yoyo/location.json"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "@remix-run/node": "^2.4.0",
    "@remix-run/react": "^2.4.0",
    "@remix-run/serve": "^2.4.0",
    "bcryptjs": "^2.4.3",
    "chart.js": "^4.4.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "date-fns": "^4.1.0",
    "i18next": "^23.16.8",
    "i18next-fs-backend": "^2.6.0",
    "i18next-http-backend": "^3.0.2",
    "isbot": "^5.1.31",
    "leaflet": "^1.9.4",
    "lucide-react": "^0.294.0",
    "qrcode": "^1.5.3",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^13.5.0",
    "react-leaflet": "^4.2.1",
    "remix-i18next": "^6.4.1",
    "tailwind-merge": "^2.1.0",
    "tailwindcss-animate": "^1.0.7",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@remix-run/dev": "^2.4.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/leaflet": "^1.9.8",
    "@types/node": "^20.10.5",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "prisma": "^5.7.1",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
